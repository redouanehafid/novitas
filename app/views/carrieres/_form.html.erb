
<%= simple_form_for(@carriere) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :email %>
    <%= f.input :sujet %>
    <%= f.input :message %>
    <div class="form-group">
    <label for="exampleFormControlFile1">Lettre de motivation</label>
    <%= f.file_field :lettre, class: "form-control-file" %>
    </div>
    <div class="form-group">
      <label for="exampleFormControlFile1">CV</label>
      <%= f.file_field :cv, class: "form-control-file" %>
    </div>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, "Poster votre condidature" , class: "theme-btn btn-style-one"%>
  </div>
<% end %>
